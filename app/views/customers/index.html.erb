

<h1>Customers</h1>

<table class="table table-striped table-bordered table-secondary table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Plate</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.plate %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Show', customer, class:"btn btn-light btn-sm" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class:"btn btn-light btn-sm" %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path, class:"btn btn-dark" %>
