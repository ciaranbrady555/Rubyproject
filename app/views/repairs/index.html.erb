

<h1>Repairs</h1>

<table class="table table-striped table-bordered table-secondary table-hover">
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Plate</th>
      <th>Work needed</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.make %></td>
        <td><%= repair.model %></td>
        <td><%= repair.plate %></td>
        <td><%= repair.work_needed %></td>
        <td><%= repair.status %></td>
        <td><%= link_to 'Show', repair, class:"btn btn-light btn-sm" %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair), class:"btn btn-light btn-sm" %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Repair', new_repair_path, class:"btn btn-dark" %>

