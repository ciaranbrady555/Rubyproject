<%= form_with(model: sale) do |form| %>
  <% if sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
        <% sale.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    
    <%= form.text_field :make, class:"form-control", placeholder:"Make" %>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :model, class:"form-control", placeholder:"Model" %>
  </div>

  <div class="field form-group">
    
    <%= form.number_field :year, class:"form-control", placeholder:"Year" %>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :features, class:"form-control", placeholder:"Features" %>
  </div>

  <div class="field form-group">
    
    <%= form.number_field :mileage, class:"form-control", placeholder:"Mileage" %>
  </div>

  <div class="field form-group">
    
    <%= form.number_field :price, class:"form-control", placeholder:"Price" %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class:"btn btn-dark" %>
  </div>
<% end %>
